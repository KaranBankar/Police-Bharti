<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary"
    android:orientation="vertical"
    tools:context=".SubjectWiseQuestionActivity">

    <ImageView
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/back"
        android:id="@+id/back"
        android:layout_margin="@dimen/_10sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject Wise Questions"
        android:textSize="@dimen/_22sdp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_10sdp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_70sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_50sdp"
            android:backgroundTint="@color/white"
            android:id="@+id/buddtimatta_chachni_card"
            android:theme="@style/CardView"
            app:strokeWidth="@dimen/_1sdp"
            app:strokeColor="@color/primary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="बुद्धिमत्ता चाचणी"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:backgroundTint="@color/white"
            android:id="@+id/ganit_card"
            app:strokeWidth="@dimen/_1sdp"
            app:strokeColor="@color/primary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="गणित"
                android:textSize="@dimen/_16sdp" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/marathi_card"
            app:strokeWidth="@dimen/_1sdp"
            android:backgroundTint="@color/white"
            app:strokeColor="@color/primary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="मराठी"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            app:strokeWidth="@dimen/_1sdp"
            android:id="@+id/chalu_ghadamodi_card"
            android:backgroundTint="@color/white"
            app:strokeColor="@color/primary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="चालू घडामोडी"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_50sdp"
            android:backgroundTint="@color/white"
            app:strokeWidth="@dimen/_1sdp"
            android:id="@+id/bhumati_card"
            app:strokeColor="@color/primary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="भूमिती"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            app:strokeWidth="@dimen/_1sdp"
            android:id="@+id/english_card"
            android:backgroundTint="@color/white"
            app:strokeColor="@color/primary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="English"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</LinearLayout>